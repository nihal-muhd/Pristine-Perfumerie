<form id="productFilter">
	<div class="container" style="margin-top: 10rem ;">
		<div class="row">
			<div class="col-xl-3 col-lg-4 col-md-5">
				<div class="sidebar-categories">
					<div class="head">Categories</div>
					<ul class="main-categories">

						<ul>
							<li class="filter-list"><input class="pixel-radio" type="checkbox" id="flexCheckChecked"
									name="categoryName" value="" checked hidden></label>
							</li>
							<li class="filter-list"><input class="pixel-radio" type="checkbox" id="flexCheckChecked"
									name="categoryName" value="Men"><label for="apple">Men</label></li>
							<li class="filter-list"><input class="pixel-radio" type="checkbox" id="flexCheckChecked"
									name="categoryName" value="Women"><label for="apple">Women</label></li>
							<li class="filter-list"><input class="pixel-radio" type="checkbox" id="flexCheckChecked"
									name="categoryName" value="Children"><label for="apple">Kids</label></li>
							<li class="filter-list"><input class="pixel-radio" type="checkbox" id="flexCheckChecked"
									name="categoryName" value="Unisex"><label for="apple">For All</label></li>
						</ul>



					</ul>
				</div>
				<div class="sidebar-filter mt-50">
					<div class="top-filter-head">Price</div>
					<div class="common-filter">


						<ul>
							<li class="filter-list"><input class="pixel-radio" type="radio" id="price" name="price"
									value="500"><label for="apple">under 500</label></li>
							<li class="filter-list"><input class="pixel-radio" type="radio" id="price" name="price"
									value="2000"><label for="apple">under 2000</label></li>
							<li class="filter-list"><input class="pixel-radio" type="radio" id="price" name="price"
									value="5000"><label for="apple">under 5000</label></li>
							<li class="filter-list"><input class="pixel-radio" type="radio" id="price" name="price"
									value="10000" checked hidden></li>

						</ul>

					</div>


				</div>
			</div>
			<div class="col-xl-9 col-lg-8 col-md-7">
				<!-- Start Filter Bar -->
				<div class="filter-bar d-flex flex-wrap align-items-center">
					<div class="sorting">
						<select name="sort" id="sortProducts" onchange="select()">
							<optgroup label="PRICE">
								<option value="hl">High to Low</option>
								<option value="lh">Low to High</option>
							</optgroup>
							<optgroup label="NAME">
								<option value="az">Name : A to Z</option>
								<option value="za">Name : Z to A</option>
							</optgroup>
							<option selected hidden>Sort</option>
						</select>
					</div>
					<div class="sorting mr-auto">

					</div>
					<div class="pagination">
						<a href="#" class="prev-arrow"><i class="fa fa-long-arrow-left" aria-hidden="true"></i></a>
						<a href="#" class="active">1</a>
						<a href="#">2</a>
						<a href="#">3</a>
						<a href="#" class="dot-dot"><i class="fa fa-ellipsis-h" aria-hidden="true"></i></a>
						<a href="#">6</a>
						<a href="#" class="next-arrow"><i class="fa fa-long-arrow-right" aria-hidden="true"></i></a>
					</div>
				</div>
				<!-- End Filter Bar -->
				<!-- Start Best Seller -->
				<section class="lattest-product-area pb-40 category-list">
					<div class="row" id="pdtsss">
						<!-- single product -->
						{{#each product}}
						<div class="col-lg-4 col-md-6">
							<div class="single-product">
								<a href="/product-details/{{this._id}}"><img class="img-fluid"
										src="/admin/product-Images/{{this.Image.[0]}}" alt=""></a>
								<div class="product-details">
									<a href="/product-details/{{this._id}}">
										<h6>{{this.Bname}}</h6>
									</a>
									<div class="price">
										<h6>Rs.{{this.Price}}</h6>
										<h6 class="l-through"></h6>
									</div>
									<div class="prd-bottom">

										<a onclick="addToCart('{{this._id}}')" class="social-info">
											<span class="ti-bag"></span>
											<p class="hover-text">add to bag</p>
										</a>
										<a onclick="addToWishList('{{this._id}}')" class="social-info">
											<span class="lnr lnr-heart"></span>
											<p class="hover-text">Wishlist</p>
										</a>

									</div>
								</div>

							</div>
						</div>
						{{/each}}
					</div>

				</section>

			</div>
		</div>
	</div>

</form>

