<body>
    <div class="content">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Products Review</strong>
                        </div>
                        <div class="card-body">
                            <table class="table" id="userReviewTable">
                                <thead>
                                    <tr>
                                        <th scope="col"> No</th>
                                        <th scope="col">User Name</th>
                                        <th scope="col">Email </th>
                                        <th scope="col">Product Id </th>
                                        <th scope="col">Review</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each reviews}}
                                    <tr>
                                        <th scope="row">{{inc @index}}</th>
                                        <td>{{this.Name}}</td>
                                        <td>{{this.Email}}</td>
                                        <td>{{this.ProId}}</td>
                                        <td>{{this.Review}}</td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

{{!-- Fn for dataTable --}}
<script>
    $(document).ready(function () {
        $('#userReviewTable').DataTable();
    });
</script>